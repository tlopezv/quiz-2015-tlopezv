</span>

<table>
<% var i; for (i=0; i < quizes.length; i++) { %>
  <tr>
    <td>
      <select name="tema" disabled>
        <% if (quizes[i].tema === 'otro') { %>
          <option value="otro" selected>Otro</option>
        <% } else { %>
          <option value="otro">Otro</option>
        <% }
           if (quizes[i].tema === 'humanidades') { %>
          <option value="humanidades" selected>Humanidades</option>
        <% } else { %>
          <option value="humanidades">Humanidades</option>
        <% }
           if (quizes[i].tema === 'ocio') { %>
        <option value="ocio" selected>Ocio</option>
        <% } else { %>
        <option value="ocio">Ocio</option>
        <% }
           if (quizes[i].tema === 'ciencia') { %>
          <option value="ciencia" selected>Ciencia</option>
        <% } else { %>
          <option value="ciencia">Ciencia</option>
        <% }
           if (quizes[i].tema === 'tecnologia') { %>
          <option value="tecnologia" selected>Tecnología</option>
        <% } else { %>
          <option value="tecnologia">Tecnología</option>
          <% } %>
      </select>
    </td>
    <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
    <td><a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
    <td>
      <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
        <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
          borrar
        </button>
      </form>
    </td>
  </tr>
<% } %>
</table>
